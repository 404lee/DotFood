@model IEnumerable<DotFood.Entity.Product>
@{
    ViewData["Title"] = "My Store";
    var isOpen = ViewBag.StoreStatus == DotFood.Entity.StoreStatus.Open;
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="div1">
    <h3 class="h3">My Store Status</h3>
    <form asp-action="ToggleStoreStatus" asp-controller="Vendor" method="post" class="text-center">
        <button type="submit" class="btn status-btn">
            Store is @(isOpen ? "Open" : "Closed") – Click to Change
        </button>
    </form>
</div>

<div class="div2">
    <h3 class="h3">My Store Products</h3>

    @if (Model.Any())
    {
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Category?.Name</td>
                        <td>@product.Price</td>
                        <td>@product.Quantity</td>
                        <td>@product.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td>
                            <a asp-action="EditItem" asp-route-id="@product.Id" class="btn action-btn edit-btn">Edit</a>
                            <form asp-action="DeleteItem" asp-route-id="@product.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <button type="submit" class="btn action-btn delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">You haven’t added any products yet.</p>
    }
</div>

<style>
    body {
        background-color: #FEF3E2;
        background-image: url('/Images/Bg1.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: Arial, sans-serif;
        color: #333;
    }

    .h3 {
        text-align: center;
        color: #FA812F;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .div1, .div2 {
        margin: 40px auto;
        width: 90%;
        max-width: 1000px;
        background-color: rgba(254, 243, 226, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0 auto;
        font-size: 16px;
        min-width: 400px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        background-color: white;
    }

        .styled-table thead tr {
            background-color: #FA812F;
            color: floralwhite;
            text-align: center;
            font-weight: bold;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
            border: 1px solid #FFB22C;
            text-align: center;
        }

        .styled-table tbody tr {
            background-color: white;
        }

            .styled-table tbody tr:hover {
                background-color: #FFE1B2;
            }

    .status-btn {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        cursor: pointer;
        background-color: @(isOpen ? "#FA812F" : "#dc3545");
        color: white;
    }

        .status-btn:hover {
            background-color: @(isOpen ? "#e06e24" : "#c82333");
            color: white;
        }


    .action-btn {
        font-size: 14px;
        padding: 5px 10px;
        margin-right: 5px;
        border: none;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        transition: 0.3s;
    }

    .edit-btn {
        background-color: #007bff;
    }

        .edit-btn:hover {
            background-color: #0056b3;
            color: white;
        }

    .delete-btn {
        background-color: #dc3545;
    }

        .delete-btn:hover {
            background-color: #a71d2a;
            color: white;
        }
</style>
