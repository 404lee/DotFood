@using DotFood.Entity
@model List<Cart>;
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-center">Cart</h2>
    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <h2 class="mb-4 text-center">Cart is Empty</h2>
        }else
        {
            @foreach (var cart in Model)
            {
           
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Cart id : @cart.Id</h5>
                            <p class="card-body text-primary">Customer id : @cart.CustomerId</p>
                            <p class="card-body text-primary">Product id : @cart.ProductId</p>
                            <form method="post" action="/Customer/RemoveFromCart">
                                <input type="hidden" name="cartId" value="@cart.Id" />
                                <button type="submit" class="btn btn-outline-primary btn-sm">Remove from cart</button>
                            </form>
                            @* <p class="card-body text-primary">@product.</p> *@
                        </div>
                    </div>
                </div>
            
            
            }
       }