@using DotFood.Entity
@model DotFood.Entity.Order


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="text-success">Thank You! Your order has been received</h1>
    </div>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h4>Order Summary</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered text-center">
                <thead class="table-light">
                    <tr>
                        <th>Order Number</th>
                        <th>Order Date</th>
                        <th>Total Price</th>
                        <th>Delivery Fee</th>
                        <th>Payment Method</th>
                        <th>Order Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@Model.TotalPrice.ToString("0.00") $</td>
                        <td>@Model.DeliveryFee.ToString("0.00") $</td>
                        <td>@Model.PaymentMethod</td>
                        <td>@Model.OrderStatus.Status</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h4>Order Details</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price per Unit</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>                                 
                       @foreach (var orderDetails in Model.OrderDetails)
                       {
                           <tr>
                               <td>@(orderDetails.Product?.Name ?? "Missing Product")</td>
                               <td>@orderDetails.Quantity</td>
                               <td>@orderDetails.Price.ToString("0.00") $</td>
                               <td>@($"{orderDetails.Price * orderDetails.Quantity:0.00}")$</td>
                           </tr>
                       }
                </tbody>
            </table>
         </div>
    </div>
</div>
