@using DotFood.Entity
@model List<Users>
@{
    ViewData["Title"] = "Vendors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-center">Meet Our Vendors</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var vendor in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@vendor.FullName</h5>
                            <p class="card-text"><strong>Email:</strong> @vendor.Email</p>
                            @if (!string.IsNullOrEmpty(vendor.City) || !string.IsNullOrEmpty(vendor.Country))
                            {
                                <p class="card-text">
                                    <strong>Location:</strong>
                                    @($"{vendor.City}, {vendor.Country}")
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-transparent border-0 text-end">
                            <a href="/Customer/ViewCategories/@vendor.Id" class="btn btn-outline-primary btn-sm">View Items</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    No vendors found.
                </div>
            </div>
        }
    </div>
</div>


