@using DotFood.ViewModels
@model ProductViewModel;
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-center">Categories</h2>
    <div class="row">
            @foreach (var productViewModel in Model.Categories)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@productViewModel.Name</h5>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-end">
                         <a href="/Customer/ViewProducts?vendorId=@Model.VendorId &categoryId=@productViewModel.Id" class="btn btn-outline-primary btn-sm">View Products</a> 
                        </div>
                    </div>
                </div>
            }
        