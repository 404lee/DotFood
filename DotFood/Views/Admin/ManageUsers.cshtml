@using DotFood.Entity
@using Microsoft.AspNetCore.Identity
@using DotFood.ViewModel
@model DotFood.ViewModel.ManageUsersViewModel

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="div1">
    <h2 class="h2">Manage Users</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model.UsersWithRoles.Any())
    {
        <table class="styled-table">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userWithRoles in Model.UsersWithRoles)
                {
                    if (!userWithRoles.Roles.Contains("Admin"))
                    {
                        <tr>
                            <td>@userWithRoles.User.FullName</td>
                            <td>@userWithRoles.User.Email</td>
                            <td>
                                @foreach (var role in userWithRoles.Roles)
                                {
                                    <span class="badge-custom">@role</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ViewHistory" asp-route-id="@userWithRoles.User.Id" class="btn-custom view">View History</a>
                                <form asp-action="DeleteUser" asp-route-id="@userWithRoles.User.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit" class="btn-custom delete">Delete User</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-users">No users found.</p>
    }
    <br />

    <button onclick="history.back()" class="go-back-button" type="button">
        <div class="go-back-icon">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 1024 1024"
                 height="25px"
                 width="25px">
                <path d="M224 480h640a32 32 0 1 1 0 64H224a32 32 0 0 1 0-64z"
                      fill="#000000"></path>
                <path d="m237.248 512 265.408 265.344a32 32 0 0 1-45.312 45.312l-288-288a32 32 0 0 1 0-45.312l288-288a32 32 0 1 1 45.312 45.312L237.248 512z"
                      fill="#000000"></path>
            </svg>
        </div>
        <p class="go-back-text">Go Back</p>
    </button>
</div>

<style>
    body {
        background-color: #FEF3E2;
        background-image: url('/Images/Bg1.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: Arial, sans-serif;
        color: #333;
    }

    .h2 {
        text-align: center;
        color: #FA812F;
        font-weight: bold;
        margin-bottom: 30px;
    }

    .div1 {
        margin: 40px auto;
        width: 90%;
        max-width: 1000px;
        background-color: rgba(254, 243, 226, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 16px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        background-color: white;
    }

        .styled-table thead tr {
            background-color: #FA812F;
            color: floralwhite;
            text-align: center;
            font-weight: bold;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
            border: 1px solid #FFB22C;
            text-align: center;
        }

        .styled-table tbody tr {
            background-color: white;
        }

            .styled-table tbody tr:hover {
                background-color: #FFE1B2;
            }

    .badge-custom {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 5px;
        margin: 2px;
        font-size: 14px;
        font-weight: 600;
    }

    .btn-custom {
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-custom.view {
            background-color: #F3C623;
            color: white;
            margin-right: 5px;
        }

            .btn-custom.view:hover {
                background-color: #d86e1f;
            }

        .btn-custom.delete {
            background-color: #e74c3c;
            color: white;
        }

            .btn-custom.delete:hover {
                background-color: #c0392b;
            }

    .no-users {
        text-align: center;
        font-style: italic;
        color: #777;
    }

    .go-back-button {
        background-color: white;
        position: relative;
        width: 12rem; /* w-48 */
        height: 3.5rem; /* h-14 */
        border-radius: 1rem; /* rounded-2xl */
        font-size: 1.25rem; /* text-xl */
        font-weight: 600;
        color: black;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border: none;
        cursor: pointer;
    }

    .go-back-icon {
        background-color: #FA812F;
        border-radius: 1rem; /* match parent fully */
        height: 100%;
        width: 25%;
        position: absolute;
        left: 0;
        top: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
        transition: width 0.5s ease;
    }

    .go-back-text {
        transform: translateX(0.5rem);
        z-index: 2;
        transition: opacity 0.4s ease;
        color: #FA812F
    }

    .go-back-button:hover .go-back-icon {
        width: 100%;
    }

    .go-back-button:hover .go-back-text {
        opacity: 0;
    }
</style>
