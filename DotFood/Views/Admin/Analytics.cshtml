@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-container">
    <h3 class="admin-title">DotFood Analytics</h3>

    <div class="admin-actions">
        <div class="button-container">
            <a asp-action="VendorAnalytics" class="admin-btn">Vendor Analytics</a>
        </div>
        <div class="button-container">
            <a asp-action="CustomerAnalytics" class="admin-btn">Customer Analytics</a>
        </div>
    </div>

    <br /><br /><br />
    <button onclick="history.back()" class="go-back-button" type="button">
        <div class="go-back-icon">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 1024 1024"
                 height="25px"
                 width="25px">
                <path d="M224 480h640a32 32 0 1 1 0 64H224a32 32 0 0 1 0-64z"
                      fill="#000000"></path>
                <path d="m237.248 512 265.408 265.344a32 32 0 0 1-45.312 45.312l-288-288a32 32 0 0 1 0-45.312l288-288a32 32 0 1 1 45.312 45.312L237.248 512z"
                      fill="#000000"></path>
            </svg>
        </div>
        <p class="go-back-text">Go Back</p>
    </button>
</div>
</div>

<link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@600&display=swap" rel="stylesheet">

<style>
    .go-back-button {
        background-color: white;
        position: relative;
        width: 12rem; /* w-48 */
        height: 3.5rem; /* h-14 */
        border-radius: 1rem; /* rounded-2xl */
        font-size: 1.25rem; /* text-xl */
        font-weight: 600;
        color: black;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border: none;
        cursor: pointer;
    }

    .go-back-icon {
        background-color: #FA812F;
        border-radius: 1rem; /* match parent fully */
        height: 100%;
        width: 25%;
        position: absolute;
        left: 0;
        top: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
        transition: width 0.5s ease;
    }

    .go-back-text {
        transform: translateX(0.5rem);
        z-index: 2;
        transition: opacity 0.4s ease;
        color: #FA812F
    }

    .go-back-button:hover .go-back-icon {
        width: 100%;
    }

    .go-back-button:hover .go-back-text {
        opacity: 0;
    }

    body {
        background-image: url('/Images/Bg1.png');
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        margin: 0;
        font-family: 'Fredoka', sans-serif;
    }

    .admin-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        text-align: center;
        padding: 2rem;
    }

    .admin-title {
        font-size: 2.5rem;
        margin-bottom: 3rem;
        color: #FA812F;
        font-family: "hobo-std", sans-serif;
        font-weight: 400;
    }

    .admin-actions {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .button-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    .admin-btn {
        padding: 12.5px 30px;
        border: none;
        border-radius: 60px;
        background-color: #FFB22C;
        color: black;
        font-weight: 700;
        font-size: 20px;
        transition: all 0.3s ease;
        text-decoration: none;
        text-align: center;
        width: 240px;
        display: inline-block;
        font-family: 'Fredoka', sans-serif;
    }

        .admin-btn:hover {
            background-color: #F3C623;
            transform: scale(1.1);
        }

        .admin-btn:active {
            transform: scale(0.98);
        }
</style>
